<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Màu nền nút -->
    <solid android:color="#FFFFFF" />

    <!-- Bo góc -->
    <corners android:radius="25dp" />

    <!-- Padding bên trong -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp" />

    <!-- Viền (tuỳ chọn) -->
    <stroke
        android:width="2dp"
        android:color="#388E3C" />
</shape>
